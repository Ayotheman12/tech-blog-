<div class="homepage-posts">
    {{#each posts as |post|}}
    <div class="card">
        <header class="card-header">
            <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
            <p>Posted by {{post.user.username}} on {{formatDate post.date_created}}</p>
        </header>
        <p class="card-body">{{post.content}}</p>
    </div>
    {{/each}}
</div>